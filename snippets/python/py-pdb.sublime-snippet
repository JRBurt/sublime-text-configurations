# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
from pprint import pprint as pp
import sys
import inspect

# Context Information
_frame = inspect.currentframe()
_info = inspect.getframeinfo(_frame)
_stack = inspect.stack()

print("\n" + "â•" * 80)
print("DEBUG CONTEXT".center(80))
print("â•" * 80)

# Current Location
print(f"\nðŸ“ CURRENT LOCATION")
print(f"  File......: {_info.filename}")
print(f"  Function..: {_info.function}()")
print(f"  Line......: {_info.lineno}")

# Call Stack (last 3 calls)
print(f"\nðŸ“ž CALL STACK (recent)")
for i, frame_info in enumerate(_stack[1:4], 1):
	_caller_func = frame_info.function
	_caller_file = frame_info.filename.split('/')[-1]
	_caller_line = frame_info.lineno
	print(f"  {i}. {_caller_func}() @ {_caller_file}:{_caller_line}")

# Variable Dump
print(f"\nðŸ“¦ VARIABLES ({len([k for k in locals() if not k.startswith('_')])} total)")
_locals = {k: v for k, v in locals().items() if not k.startswith('_')}
for _var_name, _var_value in sorted(_locals.items()):
	_type = type(_var_value).__name__
	_repr = repr(_var_value)[:45] + "..." if len(repr(_var_value)) > 45 else repr(_var_value)
	print(f"  {_var_name:.<25} {_type:.<12} {_repr}")

print("â•" * 80 + "\n")

