import time
from functools import wraps

def timer(func):
	"""Time function execution."""
	@wraps(func)
	def wrapper(*args, **kwargs):
		start = time.time()
		result = func(*args, **kwargs)
		end = time.time()
		print(f"{func.__name__} took {end - start:.4f}s")
		return result
	return wrapper
]]></content>
